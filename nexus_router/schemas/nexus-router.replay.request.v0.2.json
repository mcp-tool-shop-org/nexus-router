{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "nexus-router.replay.request.v0.2",
  "type": "object",
  "additionalProperties": false,
  "required": ["db_path", "run_id"],
  "properties": {
    "db_path": {
      "type": "string",
      "minLength": 1,
      "description": "Path to SQLite database file"
    },
    "run_id": {
      "type": "string",
      "minLength": 1,
      "description": "The run ID to replay"
    },
    "strict": {
      "type": "boolean",
      "default": true,
      "description": "If true, invariant violations cause ok=false"
    }
  }
}
